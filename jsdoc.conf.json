{
    "plugins": ["plugins/markdown"],
    "source": {
        "include": ["./src/"],
        "includePattern": "\\.(js|jsx)$",
        "exclude": ["node_modules/", ".next/", "out/"]
    },
    "opts": {
        "destination": "./docs/jsdoc/",
        "recurse": true,
        "lenient": true
    },
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "markdown": {
        "parser": "gfm"
    },
    "metadata": {
        "title": "ゆるVibe Pages - API ドキュメント",
        "description": "感情テーマから詩と背景画像を生成するNext.jsアプリケーションのAPIドキュメント"
    }
}
